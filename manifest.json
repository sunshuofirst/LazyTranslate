{
  "manifest_version": 3,
  "name": "LazyTranslate",
  "version": "1.0.0",
  "description": "支持自定义词库的智能网页翻译扩展，支持多种翻译API",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "scripting"
  ],
  "host_permissions": [
    "https://translation.googleapis.com/*",
    "https://fanyi-api.baidu.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["selectElement.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LazyTranslate"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 